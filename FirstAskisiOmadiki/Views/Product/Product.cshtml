@using Antlr.Runtime.Tree
@model IEnumerable<FirstAskisiOmadiki.Models.Product>
@{
    ViewBag.Title = "Product";
}

<h2>Product</h2>

@using (Html.BeginForm("Product", "Product", FormMethod.Get))
{
    @Html.TextBox("searchTitle", null, new { @class = "form-control", placeholder = "Search Title", type = "search", autocomplete = "off" })


    <input type="hidden" name="sortOrder" value="@ViewBag.CurrentSortOrder" />

    <input id="submitButton" type="submit" value="Search" class="btn btn-info btn-sm" />
    <input id="resetButton" type="reset" value="Reset" class="btn btn-default btn-sm" />

}


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>@Html.ActionLink("Title", "Product", "Product", new { sortOrder = ViewBag.NSP, searchTitle = ViewBag.CurrentTitle }, new { @class = "btn-default" })</th>
            <th>@Html.DisplayNameFor(p => p.IsExpired)</th>
            <th>@Html.DisplayNameFor(p => p.DateModified)</th>
            <th>@Html.ActionLink("Price", "Product", "Product", new { sortOrder = ViewBag.PSP }, new { @class = "btn-default" })</th>
            <th>Suppliers</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr id="@product.ProductId">
                <td>@product.Title</td>
                <td>@Html.DisplayFor(p => product.IsExpired)</td>
                <td>@product.DateModified</td>
                <td>@product.Price</td>
                <td>

                    <ul class="list-unstyled">


                        @foreach (var supplier in product.Suppliers)
                        {
                            <li>
                                @supplier.Name
                            </li>
                        }
                    </ul>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = product.ProductId }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { id = product.ProductId }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Details", "Details", new { id = product.ProductId }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Create", "Create", "Product", new { @class = "btn btn-success" })

@section scripts
{
    <script>

        $("#resetButton").click(function (e) {

                $("#searchTitle").val("");
            }
        );

    </script>
}
